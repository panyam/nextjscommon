{
  "exclude": [
    "node_modules",
    "dist",
    "./src/**/*.spec.ts",
    "./sites/**/*.spec.ts"
  ],
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "es6",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "plugins": [ { "name": "typescript-tslint-plugin" } ],
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react"
  },
  "include": [ "src" ]
}
